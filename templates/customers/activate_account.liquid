<!-- /templates/customers/activate_account.liquid -->

<section class="section-account">
  <div class="section-body">
    <div class="wrapper">
      <div class="grid">
        <div class="grid__item medium-up--one-half medium-up--push-one-quarter text-center">

          <h2 class="section-title text-center h3">{{ 'customer.activate_account.title' | t }}</h2>

          <p>{{ 'customer.activate_account.subtext' | t }}</p>

          {% comment %}
            This form must use 'activate_customer_password'
          {% endcomment %}
          {%- form 'activate_customer_password' -%}

            {{ form.errors | default_errors }}

            <div class="float__wrapper">
              <label for="CustomerPassword">{{ 'customer.activate_account.password' | t }}</label>

              <input
               type="password"
               value=""
               name="customer[password]"
               id="CustomerPassword"
               placeholder="{{ 'customer.activate_account.password' | t }}">
            </div>

            <div class="float__wrapper">
              <label for="CustomerPasswordConfirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>

              <input
               type="password"
               value=""
               name="customer[password_confirmation]"
               id="CustomerPasswordConfirmation"
               placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
            </div>

            <div class="text-center">
              <input
               type="submit"
               class="btn btn--full"
               value="{{ 'customer.activate_account.submit' | t }}">

              <div class="form--additional">
                <input
                 type="submit"
                 class="text-link"
                 name="decline"
                 value="{{ 'customer.activate_account.cancel' | t }}">
              </div>
            </div>

          {%- endform -%}
        </div>
      </div>
    </div>
  </div>
</div>