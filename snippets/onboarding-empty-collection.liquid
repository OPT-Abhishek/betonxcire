<!-- snippets/onboarding-empty-collection.liquid -->
<div class="grid__item">
  <div class="helper-section">
    <div class="helper-note">
      <span class="helper-icon"></span>
      <h3>{{ 'collections.onboarding.modal_title' | t }}</h3>
      <p>{{ 'collections.onboarding.no_products_html' | t }}</p>
      <p><a href="/admin/products/new" class="admin-btn-primary">{{ 'collections.onboarding.add_product' | t }}</a></p>
    </div>

    <div class="grid grid--uniform helper-content">
      {% assign index = 1 %}
      {% for i in (1..8) %}
        <div class="grid__item product-grid-item one-half medium-up--one-quarter">
          <a href="/admin/products">
            {% capture imgCount %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
            {% capture svg_name %}product-{{ imgCount }}{% endcapture %}
            {{ svg_name | placeholder_svg_tag: 'placeholder-svg' }}
          </a>
          <div class="grid__meta {{ settings.product_grid_style }}">
            <p class="grid__title h6"><a href="/admin/products">{{ 'home_page.onboarding.product_title' | t }}</a></p>
            <p class="grid__price">$19.99</p>
          </div>
        </div>
        {% assign index = index | plus: 1 %}
      {% endfor %}
    </div>
  </div>
</div>
