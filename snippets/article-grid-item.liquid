<div class="article-grid-item grid__item {{ blog_grid }}">
  <div
   class="grid__wrap"
   data-aos="fade-up"
   data-aos-easing="linear"
   data-aos-duration="400"
   data-aos-delay="0">
    <div class="grid__header">
      <a
       class="article__image-link"
       href="{{ article.url }}"
       aria-label="{{ article.title }}">
        <div class="article__image-wrap">
          {%- if article.image -%}
            {%- assign img_object = article.image -%}
            <div
             class="article__image lazyload"
             data-bgset="{% include 'bgset', image: img_object %}"
             role="img"
             aria-label="{{ img_object.alt }}"></div>
            <noscript>
              <div
               class="article__image"
               style="background-image: url('{{ article.image | img_url: 'x540' }}')"></div>
            </noscript>
          {%- else -%}
            <div class="article__image article__image--blank"></div>
          {%- endif -%}
        </div>
      </a>
    </div>

    <div class="grid__body">
      <div class="content-wrapper">
        <div class="article__logo">
          <div class="svg-wrapper">
            {% include 'logo-rames' %}
          </div>
        </div>

        <p class="article__date">{{ article.published_at | date: format: 'month_day_year' }}</p>

        {%- include 'article-tags' -%}

        <h3 class="article__title">
          <a href="{{ article.url }}" aria-label="{{ article.title }}">{{ article.title }}</a>
        </h3>

        <div class="article__excerpt rte">
          {% if article.excerpt == blank %}
            {{ article.content | strip_html | truncate: 200 }}
          {% else %}
            {{ article.excerpt | strip_html | truncate: 200 }}
          {% endif %}
        </div>

        <p class="grid__read-more">
          <a
           href="{{ article.url }}"
           aria-label="{{ article.title }}"
           class="text-link--grey text-link--arrow-next uppercase">Read More</a>
        </p>
      </div>
    </div>
  </div>
</div>
