<!-- /snippets/social-sharing.liquid -->

<div class="share text-center">
  {% if settings.share_enable_facebook %}
    <a class="share__link" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
      {% include 'icon-facebook' %}
      <span class="share__text">{{ 'general.share.facebook' | t }}</span>
    </a>
  {% endif %}
  {% if settings.share_enable_twitter %}
    <a class="share__link" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
      {% include 'icon-twitter' %}
      <span class="share__text">{{ 'general.share.twitter' | t }}</span>
    </a>
  {% endif %}
  {% if settings.share_enable_pinterest %}
    <a class="share__link" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
      {% include 'icon-pinterest' %}
      <span class="share__text">{{ 'general.share.pinterest' | t }}</span>
    </a>
  {% endif %}
</div>
